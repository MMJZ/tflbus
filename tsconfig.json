{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"baseUrl": "./src",
		"paths": {
			"@components": ["components"],
			"@model": ["model"],
			"@state": ["state"]
		},
		"plugins": [{ "name": "typescript-plugin-css-modules" }],
		"types": ["vitest/globals"]
	},
	"include": ["node_modules/vite/client.d.ts", "**/*"]
}
